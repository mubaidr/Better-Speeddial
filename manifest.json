{
  "manifest_version": 2,
  "name": "Better Dial +",
  "description": "Brings many improvements to Speed-dial.",
  "version": "2.0",  
  "icons": { 
	  "48": "img/icon_48.png"
   },  
  "minimum_chrome_version": "16.0.1196.14",
  "background" : {
		"scripts" : ["js/bck.js"],
		"persistent": false
	},
  "content_scripts" : [{
			"matches" : ["opera://startpage/*"],
			"css" : ["css/start.css"],
			"js": ["js/start.js"]
		}
	],
	"developer" : {
		"name" : "mubaidr",
		"url": "http://my.opera.com/mubaidr/"
	},
	"permissions" : ["storage"],
	"options_page": "html/option.html"
}